<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_list_container_category_recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textColor="@color/color_text_primary"
        android:textStyle="bold"
        android:text="@string/tape_best_recipes_of_the_day"/>

    <TextView
        android:id="@+id/item_list_container_category_recipes_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textSize="14sp"
        android:textColor="@color/color_text_secondary"
        android:textStyle="bold"
        android:text="@string/tape_more"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_list_container_category_recipes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_list_container_category_recipes"
        android:layout_marginTop="4dp"
        android:clipToPadding="false"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

</RelativeLayout>