<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemListCategoryCardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/itemListCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sousy_marinady" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/itemListCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemListCategoryCardView"
        android:layout_alignStart="@id/itemListCategoryCardView"
        android:layout_alignEnd="@id/itemListCategoryCardView"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/color_text_primary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemListCategoryCountRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemListCategoryName"
        android:layout_alignStart="@id/itemListCategoryCardView"
        android:layout_alignEnd="@id/itemListCategoryCardView"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/color_text_secondary" />
</RelativeLayout>