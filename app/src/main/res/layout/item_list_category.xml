<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_list_category_card_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/item_list_category_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sousy_marinady" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_list_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_list_category_card_view"
        android:layout_alignStart="@id/item_list_category_card_view"
        android:layout_alignEnd="@id/item_list_category_card_view"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/color_text_primary"
        android:textStyle="bold"
        android:text="dasdaddddddddddadadaddasdad" />

    <TextView
        android:id="@+id/item_list_category_count_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_list_category_name"
        android:layout_alignStart="@id/item_list_category_card_view"
        android:layout_alignEnd="@id/item_list_category_card_view"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/color_text_secondary"
        android:text="23 рецепта" />
</RelativeLayout>