<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_list_container_best_recipes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:text="@string/tape_best_recipes_of_the_day"
        android:textColor="@color/color_text_primary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_list_container_best_recipes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_list_container_best_recipes_title"
        android:layout_marginTop="4dp"
        android:clipToPadding="false"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
        android:id="@+id/item_list_container_best_recipes_recycler_view_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_list_container_best_recipes_recycler_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        app:spi_dotColor="@color/color_dots"
        app:spi_dotSelectedColor="@color/color_dots_selected" />

</RelativeLayout>